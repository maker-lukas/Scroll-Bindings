{
	"schemaVersion": 1,
	"id": "scroll_bindings",
	"version": "${version}",
	"name": "Scroll Bindings",
	"description": "Adds scroll wheel keybinds to Minecraft.",
	"authors": [
		"orangopontotango"
	],
	"license": "AGPL-3.0",
	"icon": "assets/scroll_bindings/icon.png",
	"environment": "client",
	"entrypoints": {
		"client": [
			{
				"value": "com.orangopontotango.scrollbindings.ScrollBindingsClient",
				"adapter": "kotlin"
			}
		]
	},
	"mixins": [
		{
			"config": "scroll_bindings.client.mixins.json",
			"environment": "client"
		}
	],
	"depends": {
		"fabricloader": ">=0.18.4",
		"minecraft": "~1.21.4",
		"java": ">=21",
		"fabric-api": "*",
		"fabric-language-kotlin": "*"
	}
}
